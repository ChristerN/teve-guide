@model IEnumerable<teve_guide.Models.db.tv_shows>

@{
    ViewBag.Title = "Administrera sidan";
}

<h2>Administrera sidan</h2>



<p>
    @Html.ActionLink("Lägg till program", "Create")
</p>
<br />
<h3>Alla program:</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Starttime)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Endtime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Substance)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Channel)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Starttime < DateTime.Now)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Starttime)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Endtime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Substance)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Channel)
                </td>
                <td>
                    @Html.ActionLink("Uppdatera", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Mer info", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Ta bort", "Delete", new { id=item.Id })
                </td>
            </tr>
        }
    }

</table>
