@model IEnumerable<teve_guide.Models.db.tv_shows>
@{
    ViewBag.Title = "På den här kanalen om tre dagar";
}
<h2>@ViewBag.Title</h2>

<h3>@DateTime.Today.AddDays(3).ToShortDateString()</h3>

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Starttime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Starttime > DateTime.Today.AddDays(3) && item.Endtime < DateTime.Today.AddDays(4))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Starttime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.ActionLink("Mer info", "Details", new { id = item.Id })<br />
                    @Html.ActionLink("På den här kanalen om fyra dagar", "InFourDaysTvTable", new { channel = item.Channel })<br />
                    @Html.ActionLink("På den här kanalen igår", "TomorrowTvTable",new { channel = item.Channel })

                </td>
            </tr>
        }
    }

</table>

<p>@Html.ActionLink("Till startsidan", "Index")</p>


