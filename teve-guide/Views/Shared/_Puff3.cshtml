
@model IEnumerable<teve_guide.Models.db.tv_shows>

@{
    ViewBag.Title = "På teve just nu";
    var puff3 = 5010;
}


<br />

<table class="table">
    <tr>
        <td>
            <!--Puff-->

            @foreach (var p in Model)
            {
                if(p.Id==puff3)
                { 
                <strong>@p.Title</strong> <br />
                @p.Substance <br />
                @p.Channel <br />
                @p.Starttime <br />

                @Html.ActionLink("Mer info", "Details", new { id = p.Id }) <br />
                }
            }



        </td>
    </tr>
</table>
